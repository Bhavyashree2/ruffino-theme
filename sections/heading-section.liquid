<style>
    @keyframes textanimation {
          0% {
            transform: translateX(100%);
          }
          45% {
            transform: translateX(0%);
          }
          55% {
            transform: translateX(0%);
          }
          100% {
            transform: translateX(-100%);
          }
    }
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .heading-text-1 {
        animation: textanimation 20s linear infinite;
        animation-delay: 0s;
        animation-fill-mode: forwards;
        animation-play-state: running;
        animation-iteration-count: infinite;
        animation-direction: normal;
    }
    .heading-text-2 {
      animation: textanimation 20s linear infinite;
        animation-delay: 0s;
        animation-fill-mode: forwards;
        animation-play-state: running;
        animation-iteration-count: infinite;
        animation-direction: reverse;
    }
   
    @media (min-width: 1280px) {
      .heading-text-1:lang(de), .heading-text-2:lang(de){
        font-size: 75px;
        line-height: 75px;
      }
    }
    @media only screen and (min-width: 1300px) {
      .heading-text-1, .heading-text-2 {
        left: 5% !important;
      }
    }
    @media only screen and (min-width: 1400px) {
      .heading-text-1, .heading-text-2{
        left: 10% !important;
      }
    }
    
    @media only screen and (min-width: 1600px) {
      .heading-text-1, .heading-text-2{
        left: 15% !important;
      }
    }

    @media screen and (device-width: 768px) and (device-height: 1024px) {
      .heading-text-1:lang(de), .heading-text-2:lang(de){
        font-size: 45px;
      }
    }
    @media screen and (device-width: 1024px) {
      .heading-text-1:lang(de), .heading-text-2:lang(de){
        font-size: 55px;
        line-height: 55px;
      }
    }
    
  </style>


<div class="{{ section.settings.custom_class }} tw-relative section-{{ section.id }}-padding mobile:!tw-pt-[5rem] mobile:!tw-pb-0 tw-overflow-hidden">
    <div class="mobile:tw-relative mobile:tw-overflow-hidden">
      <h2 title ="{{ section.settings.heading_line_1 }} {{ section.settings.heading_line_2 }}" class="screen-reader-only"> {{ section.settings.heading_line_1 }} {{ section.settings.heading_line_2 }}</h2>
        {% if section.settings.heading_line_1 != blank %}
            <h2 class="animatedheading tw-relative heading-text-1 js-show-on-scroll tw-font-made-saonara tw-tracking-normal tw-leading-[93px] tw-text-[93px] tw-font-normal tw-text-[#231f20] tw-uppercase tw-whitespace-nowrap mobile:tw-leading-[107px] mobile:tw-text-[90px] ipadPro:tw-text-[65px] ipadPro:tw-leading-[65px] ipad:tw-text-[55px] ipad:tw-leading-[55px]" aria-hidden="true">{{ section.settings.heading_line_1 }}</h2>
        {% endif %}
        {% if section.settings.heading_line_2 != blank %}
            <h2 class="heading-2 tw-relative js-show-on-scroll heading-text-2 tw-font-made-saonara tw-tracking-normal tw-leading-[93px] tw-text-[93px] tw-font-normal tw-text-[#231f20] tw-uppercase tw-whitespace-nowrap mobile:tw-leading-[107px] mobile:tw-text-[90px] ipadPro:tw-text-[65px] ipadPro:tw-leading-[65px] ipadPro:tw-left-[10%] ipad:tw-text-[55px] ipad:tw-leading-[55px] ipad:tw-left-[10%] minmax768:tw-left-0" aria-hidden="true">{{ section.settings.heading_line_2 }}</h2>
        {% endif %}
    </div>
</div>


{% schema %}
{
  "name": "Heading",
  "class": "heading-section",
  "settings": [
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom Class"
  },
    {
        "type": "text",
        "id": "heading_line_1",
        "label": "Heading Line 1"
    },
    {
        "type": "text",
        "id": "heading_line_2",
        "label": "Heading Line 2"
    },
    {
        "type": "checkbox",
        "id": "animated",
        "default": true,
        "label": "Do you want to have animation?"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Heading"
    }
  ]
}
{% endschema %}