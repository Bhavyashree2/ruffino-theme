    <script type="text/javascript">
    $(document).ready(function(){
        image_area_calc();
        $( window ).resize(function() {
            image_area_calc();
        })
        function image_area_calc(){ 
            var image_area=0;
            var image_height = 0;
            var req_height = 0;
            $( "body .slider-{{section.id}} .slide" ).each(function( index ) {
                var image_area = $(this).find('.image-box').outerHeight();
                var image_height = $(this).find('.image-box img').outerHeight();
                var image_area_width = $(this).find('.image-box').outerWidth();
                var image_width = $(this).find('.image-box img').outerWidth();
                var req_height = image_height - image_area;
                $(this).find('.image-box img').css('height','auto');
                $(this).find('.image-box img').css('top','0');
                if(image_height < image_area || image_width > image_area_width){
                    $(this).find('.image-box img').css('top',0+'px');
                     $(this).find('.image-box img').css('height',image_area+'px');
                     $(this).find('.image-box img').css('max-width','initial');
                    $(this).find('.image-box img').css('width','auto');
                }else{
                    $(this).find('.image-box img').css('top',-req_height+'px');   
                }
            })
           
        }
    $(".slide").attr("tabindex", "-1");
    })
    </script>

