    <script type="text/javascript">
       
        //Code to hide empty slides from mobile responsive
        var breakpointMobile = 767,
            isChanging = false,
            isFiltered = false;
        
        $('.{{ section.settings.slider_class }}').on('init breakpoint', function(event, slick){ 
        if ( ! isChanging ) {                                         
        
            isChanging = true;
            if ( slick.activeBreakpoint && slick.activeBreakpoint <= breakpointMobile) {
            if ( ! isFiltered ) {
                slick.slickFilter(':not(.hide-on-mobile)');      
                isFiltered = true;
            }
            } else {
            if ( isFiltered ) {
                slick.slickUnfilter();
                isFiltered = false;
            }
            }
            isChanging = false;
        } 
        }).slick({
         prevArrow:"<button type='button' class='slick-prev pull-left tw-absolute tw-top-0 tw-right-[60px] focus-visible:tw-outline-hidden focus-visible:tw-border-2 focus-visible:tw-border-black focus-visible:tw-outline-0 focus-visible:tw-shadow-none max767:tw-right-[38px] {% if section.settings.images_per_page == 4 %} tw-right-[35px] {% endif %} {% if section.settings.images_per_page == 5 %} tw-right-[38px]  {% endif %} ' aria-label='Previous'><i class='fa fa-angle-left' aria-hidden='true'></i></button>",
